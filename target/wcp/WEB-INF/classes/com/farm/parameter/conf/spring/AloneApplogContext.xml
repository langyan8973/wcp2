<?xml version="1.0" encoding="UTF-8"?>
<!--将该脚本加入spring配置文件中      系统日志-->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 系统日志Dao实现 -->
	<bean id="alone_applogDaoId"
		class="com.farm.parameter.dao.impl.AloneApplogDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
		<property name="sqlTools">
			<bean id="AloneApplog_sqlTool" class="com.farm.core.sql.utils.HibernateSQLTools">
				<constructor-arg>
					<ref bean="sessionFactory" />
				</constructor-arg>
				<constructor-arg>
					<bean id="AloneApplog_object" class="com.farm.parameter.domain.AloneApplog"></bean>
				</constructor-arg>
			</bean>
		</property>
	</bean>
	<!-- Server实现 -->
	<bean id="alone_applogServerId"
		class="com.farm.parameter.service.impl.AloneApplogManagerImpl">
		<property name="aloneApplogDao">
			<ref bean="alone_applogDaoId" />
		</property>
	</bean>
	<!-- Server事务代理类 -->
	<bean id="alone_applogProxyId"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="proxyInterfaces">
			<list>
				<value>
					com.farm.parameter.service.AloneApplogManagerInter
				</value>
			</list>
		</property>
		<property name="transactionManager">
			<ref bean="TransactionManager" />
		</property>
		<property name="target">
			<ref bean="alone_applogServerId" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="KEYalone_applogTRANCACTION" />
		</property>
	</bean>
	<!-- 事务属性声明 -->
	<bean id="KEYalone_applogTRANCACTION"
		class="org.springframework.transaction.interceptor.NameMatchTransactionAttributeSource">
		<property name="properties">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
</beans>