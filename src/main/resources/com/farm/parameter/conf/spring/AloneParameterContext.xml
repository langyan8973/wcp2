<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- Dao实现 -->
	<bean id="ALONE_PARAMETER_DAO" class="com.farm.parameter.dao.impl.ParameterDao">
		<property name="sessionFatory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<!-- Server实现 -->
	<bean id="ALONE_PARAMETER_SERVER" class="com.farm.parameter.service.impl.ParameterManagerImpl">
		<property name="parameterDao">
			<ref bean="ALONE_PARAMETER_DAO" />
		</property>
		<property name="aloneparameterlocalDao">
			<ref bean="farm_parameter_aloneParameterLocal_DaoId" />
		</property>
	</bean>
	<!-- Server事务代理类 -->
	<bean id="ALONE_Parameter_DAO_PROXY"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="proxyInterfaces">
			<list>
				<value>
					com.farm.parameter.service.ParameterManagerInter
				</value>
			</list>
		</property>
		<property name="transactionManager">
			<ref bean="TransactionManager" />
		</property>
		<property name="target">
			<ref bean="ALONE_PARAMETER_SERVER" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="PARAMETERTransactionAttributeSource" />
		</property>
	</bean>
	<!-- 事务属性声明 -->
	<bean id="PARAMETERTransactionAttributeSource"
		class="org.springframework.transaction.interceptor.NameMatchTransactionAttributeSource">
		<property name="properties">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
</beans>