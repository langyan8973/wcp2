<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  <!-- 任务留言Dao实现 -->
  <bean id="farm_plan_TaskComment_DaoId"
    class="com.farm.plan.dao.impl.TaskcommentDaoImpl">
    <property name="sessionFatory">
      <ref bean="sessionFactory" />
    </property>
    <property name="sqlTools">
      <bean  class="com.farm.core.sql.utils.HibernateSQLTools">
        <constructor-arg>
           <ref bean="sessionFactory" />
        </constructor-arg>
        <constructor-arg>
          <bean class="com.farm.plan.domain.Taskcomment"></bean>
        </constructor-arg>
      </bean>
    </property>
  </bean>
  <!-- Server配置文件注入   <property name="taskcommentDao"><ref bean="farm_plan_TaskComment_DaoId" /></property>-->
  <!-- Server实现类变量  private TaskcommentDaoInter  taskcommentDao;-->
</beans>